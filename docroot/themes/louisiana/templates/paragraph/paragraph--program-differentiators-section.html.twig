{% import "@oho_base/includes/oho-macros.html.twig" as oho_macros %}
<section class="section--differentiators section--wide-lined-title section--banded section--white">
  <div class="grid-container">
    <div class="grid-x">
      <div class="cell">
        <h2><span>{{ content.field_component_title }}</span></h2>
      </div>
    </div>
    <div class="grid-x grid-margin-x section__content">
      <div class="cell small-12 medium-8">
        <article class="program__quick-info">
          <h3>What's {{ nodetitle }} Like?</h3>
            <ul class="program__rated--group">
              {{ content.field_pds_quick_info_ratings }}
            </ul>
        </article>
      </div>
      <div class="cell small-12 medium-4">
        <article class="differentiator">
          {# content.field_pds_differentiator #}
          {{ content.field_prog_differentiator_card }}
        </article>
      </div>
    </div>
    <div class="grid-x section__all-link">
      <div class="cell">    
        {{ oho_macros.link_field_link(content.field_component_link, 'btn') }}
      </div>
    </div>  
  </div>
</section>
