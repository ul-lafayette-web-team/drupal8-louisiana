      <div class="image-video-grid__slide">
        <a href="#image-video-grid__slide--{{ paragraph.id.value }}" data-fancybox="image-video-gallery"  class="image-video-grid__item">
          <div class="video-indicator">
            <i class="fas fa-circle"></i>
            {% if content.field_component_video|render %}
              <i class="fas fa-play"></i>
            {% else %}
              <i class="far fa-expand-arrows"></i>
            {% endif %}
          </div>
          <div class="image-video-grid-item__media">
            {{ content.field_component_image }}
          </div>
          <div class="image-video-grid-item__text">
            <div>{{ content.field_component_title }}</div>
            <div class="insta-credit"><i class="fab fa-instagram"></i><span>ullafayette</span></div>
          </div>
        </a>
        <figure class="image-video-grid__fancy" id="image-video-grid__slide--{{ paragraph.id.value }}">
          {% if content.field_component_video|render %}
          <div class="iframe-wrapper">
            {{ content.field_component_video }}
          </div>
          {% else %}
            {{ content.field_component_image }}

          {% endif %}
            <figcaption class="image-video-grid-fancy__text">
              {{ content.field_component_title }}
            </figcaption>
        </figure>
      </div><!-- /__slide -->
