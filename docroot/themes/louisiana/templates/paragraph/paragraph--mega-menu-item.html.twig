{% import "@oho_base/includes/oho-macros.html.twig" as oho_macros %}
{% set url_current = path('<current>') %}
{% set url_active = content.field_component_link[0]['#url'] %}
{% if url_active|render == url_current %}
  {% set my_class = "is-active" %}
{% else %}
  {% set my_class = "" %}
{% endif %}

<a class="{{ my_class }}" href="{{ content.field_component_link[0]['#url'] }}">{{ content.field_component_link[0]['#title'] }}</a>

<div class="ull-header__mega-menu">
  <div class="ull-header-mega-menu__title">
    {{ content.field_component_link }}
  </div>

  <div class="ull-header-mega-menu__row">
    {% if content.field_component_body|render %}
      <div class="ull-header-mega-menu__text">
        <p>{{ content.field_component_body }}</p>
      </div>
    {% endif %}

    <nav class="ull-header-mega-menu__list">
      {{ oho_macros.link_field_list(content.field_mmi_links, 'menu') }}
    </nav>
  </div>
</div>
